<Window x:Class="MedicalImagingSystem.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:MedicalImagingSystem.ViewModels;assembly=MedicalImagingSystem.ViewModels"
        xmlns:views="clr-namespace:MedicalImagingSystem.Views"
        mc:Ignorable="d"
        Style="{DynamicResource MainWindowStyle}"
        Title="医疗影像管理系统" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SecondaryBackgroundBrush}"
                BorderBrush="{DynamicResource PrimaryBorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="医疗影像管理系统" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               VerticalAlignment="Center"/>
                    
                    <Border Width="20"/>
                    
                    <Button Content="刷新数据" 
                            Style="{DynamicResource AnimatedButtonStyle}"
                            Command="{Binding RefreshDataCommand}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="{Binding CurrentTheme, StringFormat='当前主题: {0}'}"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="0,0,15,0"/>
                    
                    <Button Content="切换主题" 
                            Style="{DynamicResource AnimatedButtonStyle}"
                            Command="{Binding SwitchThemeCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" MinWidth="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>
            
            <!-- Patient List Panel -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource PrimaryBorderBrush}"
                    BorderThickness="0,0,1,0">
                <views:PatientListView DataContext="{Binding PatientListViewModel}"/>
            </Border>
            
            <!-- Grid Splitter -->
            <GridSplitter Grid.Column="1" 
                          Background="{DynamicResource PrimaryBorderBrush}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"/>
            
            <!-- Image Viewer Panel -->
            <Border Grid.Column="2" 
                    Background="{DynamicResource PrimaryBackgroundBrush}">
                <views:ImageViewerView DataContext="{Binding ImageViewerViewModel}"/>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource TertiaryBackgroundBrush}"
                BorderBrush="{DynamicResource PrimaryBorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="15,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           Text="{Binding SelectedPatient.Name, StringFormat='选中患者: {0}', FallbackValue='未选择患者'}"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="就绪" 
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <!-- Loading Indicator -->
                    <Border Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Width="20" Height="20">
                        <TextBlock Text="..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>