<Window x:Class="MedicalImagingSystem.Views.SimpleMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Style="{DynamicResource MainWindowStyle}"
        Title="医疗影像管理系统" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource SecondaryBackgroundBrush}"
                BorderBrush="{DynamicResource PrimaryBorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="医疗影像管理系统" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="{Binding CurrentTheme, StringFormat='当前主题: {0}'}"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="0,0,15,0"/>
                    
                    <Button Content="切换主题" 
                            Style="{DynamicResource AnimatedButtonStyle}"
                            Click="SwitchTheme_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" MinWidth="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>
            
            <!-- Patient List Panel -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource PrimaryBorderBrush}"
                    BorderThickness="0,0,1,0">
                
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <TextBlock Grid.Row="0" 
                               Text="患者列表" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               Margin="0,0,0,15"/>
                    
                    <!-- Search Box -->
                    <TextBox Grid.Row="1" 
                             x:Name="SearchBox"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Style="{DynamicResource ModernTextBoxStyle}"
                             FontSize="14"
                             Margin="0,0,0,15"/>
                    
                    <!-- Patient List -->
                    <Border Grid.Row="2" 
                            BorderBrush="{DynamicResource PrimaryBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                        
                        <ListBox ItemsSource="{Binding Patients}"
                                 SelectedItem="{Binding SelectedPatient}"
                                 Style="{DynamicResource ModernListBoxStyle}"
                                 ItemContainerStyle="{DynamicResource ModernListBoxItemStyle}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10" Margin="5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Patient Name -->
                                            <TextBlock Grid.Row="0" Grid.Column="0"
                                                       Text="{Binding Name}" 
                                                       FontSize="16" 
                                                       FontWeight="Bold"
                                                       Foreground="{DynamicResource PrimaryTextBrush}"/>
                                            
                                            <!-- Image Count -->
                                            <Border Grid.Row="0" Grid.Column="1"
                                                    Background="{DynamicResource AccentBrush}"
                                                    CornerRadius="10"
                                                    Padding="8,2">
                                                <TextBlock Text="{Binding Images.Count, StringFormat='\{0\} 张'}"
                                                           Foreground="White"
                                                           FontSize="10"/>
                                            </Border>
                                            
                                            <!-- Medical Record Number -->
                                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                       Text="{Binding MedicalRecordNumber, StringFormat='病历号: {0}'}"
                                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                                       FontSize="12"
                                                       Margin="0,2,0,0"/>
                                            
                                            <!-- Gender and Age -->
                                            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                        Orientation="Horizontal"
                                                        Margin="0,2,0,0">
                                                <TextBlock Text="{Binding Gender}"
                                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                                           FontSize="12"/>
                                                <TextBlock Text=" • "
                                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                                           FontSize="12"/>
                                                <TextBlock Text="{Binding Age, StringFormat='\{0\} 岁'}"
                                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                                           FontSize="12"/>
                                            </StackPanel>
                                            
                                            <!-- Birth Date -->
                                            <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                                       Text="{Binding BirthDate, StringFormat='出生日期: {0:yyyy-MM-dd}'}"
                                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                                       FontSize="11"
                                                       Margin="0,2,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Grid Splitter -->
            <GridSplitter Grid.Column="1" 
                          Background="{DynamicResource PrimaryBorderBrush}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"/>
            
            <!-- Image Viewer Panel -->
            <Border Grid.Column="2" 
                    Background="{DynamicResource PrimaryBackgroundBrush}">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Border Grid.Row="0" 
                            Background="{DynamicResource SecondaryBackgroundBrush}"
                            BorderBrush="{DynamicResource PrimaryBorderBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="15,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="医疗影像查看器" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       VerticalAlignment="Center"/>
                            
                            <!-- Zoom Controls -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="适应窗口"
                                        Style="{DynamicResource PrimaryButtonStyle}"
                                        Click="ResetZoom_Click"
                                        Margin="0,0,5,0"/>
                                
                                <Button Content="重置"
                                        Style="{DynamicResource PrimaryButtonStyle}"
                                        Click="ResetZoom_Click"
                                        Margin="0,0,5,0"/>
                                
                                <Button Content="放大"
                                        Style="{DynamicResource PrimaryButtonStyle}"
                                        Click="ZoomIn_Click"
                                        Margin="0,0,5,0"/>
                                
                                <Button Content="缩小"
                                        Style="{DynamicResource PrimaryButtonStyle}"
                                        Click="ZoomOut_Click"
                                        Margin="0,0,5,0"/>
                                
                                <TextBlock Text="{Binding ZoomLevel, StringFormat='\{0:P0\}'}"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           FontWeight="Bold"
                                           MinWidth="50"
                                           TextAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Image List (if patient has multiple images) -->
                    <Border Grid.Row="1" 
                            Background="{DynamicResource TertiaryBackgroundBrush}"
                            BorderBrush="{DynamicResource PrimaryBorderBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="15,10"
                            MaxHeight="120"
                            Visibility="{Binding SelectedPatient.Images.Count, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ListBox ItemsSource="{Binding SelectedPatient.Images}"
                                 SelectedItem="{Binding SelectedImage}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                 Background="Transparent"
                                 BorderThickness="0">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource PrimaryBackgroundBrush}"
                                            BorderBrush="{DynamicResource PrimaryBorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="10"
                                            Margin="0,0,10,0"
                                            MinWidth="120">
                                        <StackPanel>
                                            <TextBlock Text="{Binding FileName}" 
                                                       FontWeight="Bold"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxWidth="100"/>
                                            <TextBlock Text="{Binding Modality}" 
                                                       FontSize="10"
                                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                                       Margin="0,2,0,0"/>
                                            <TextBlock Text="{Binding BodyPart}" 
                                                       FontSize="10"
                                                       Foreground="{DynamicResource SecondaryTextBrush}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                    
                    <!-- Image Display Area -->
                    <Border Grid.Row="2" 
                            Background="{DynamicResource PrimaryBackgroundBrush}">
                        <Grid>
                            <!-- Main Image Viewer -->
                            <ScrollViewer x:Name="ImageScrollViewer"
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto"
                                          Background="Transparent">
                                <Border Background="#F0F0F0" Width="400" Height="300" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Border.RenderTransform>
                                        <ScaleTransform ScaleX="{Binding ZoomLevel}" ScaleY="{Binding ZoomLevel}"/>
                                    </Border.RenderTransform>
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="📷" FontSize="48" HorizontalAlignment="Center" Opacity="0.5"/>
                                        <TextBlock Text="医疗影像预览" FontSize="16" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                        <TextBlock Text="{Binding SelectedImage.FileName, FallbackValue='无影像'}" 
                                                   FontSize="12" 
                                                   HorizontalAlignment="Center" 
                                                   Margin="0,5,0,0"
                                                   Opacity="0.7"/>
                                    </StackPanel>
                                </Border>
                            </ScrollViewer>
                            
                            <!-- No Image Message -->
                            <Border Background="Transparent">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedPatient}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="📋" 
                                               FontSize="48" 
                                               HorizontalAlignment="Center"
                                               Opacity="0.3"/>
                                    <TextBlock Text="请选择患者查看医疗影像"
                                               FontSize="16"
                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                               HorizontalAlignment="Center"
                                               Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <!-- Image Information Panel -->
                    <Border Grid.Row="3" 
                            Background="{DynamicResource TertiaryBackgroundBrush}"
                            BorderBrush="{DynamicResource PrimaryBorderBrush}"
                            BorderThickness="0,1,0,0"
                            Padding="15,10"
                            Visibility="{Binding SelectedImage, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="文件信息" 
                                           FontWeight="Bold" 
                                           FontSize="12"
                                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                                <TextBlock Text="{Binding SelectedImage.FileName}" 
                                           FontSize="11"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding SelectedImage.FileSizeFormatted}" 
                                           FontSize="11"
                                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="图像尺寸" 
                                           FontWeight="Bold" 
                                           FontSize="12"
                                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                                <TextBlock FontSize="11"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           Margin="0,2,0,0">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} × {1}">
                                            <Binding Path="SelectedImage.Width"/>
                                            <Binding Path="SelectedImage.Height"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="检查信息" 
                                           FontWeight="Bold" 
                                           FontSize="12"
                                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                                <TextBlock Text="{Binding SelectedImage.Modality}" 
                                           FontSize="11"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding SelectedImage.BodyPart}" 
                                           FontSize="11"
                                           Foreground="{DynamicResource SecondaryTextBrush}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="拍摄时间" 
                                           FontWeight="Bold" 
                                           FontSize="12"
                                           Foreground="{DynamicResource PrimaryTextBrush}"/>
                                <TextBlock Text="{Binding SelectedImage.CaptureDate, StringFormat='\{0:yyyy-MM-dd HH:mm\}'}" 
                                           FontSize="11"
                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource TertiaryBackgroundBrush}"
                BorderBrush="{DynamicResource PrimaryBorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="15,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           Text="{Binding SelectedPatient.Name, StringFormat='选中患者: {0}', FallbackValue='未选择患者'}"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="1"
                           Text="就绪" 
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>